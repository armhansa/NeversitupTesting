<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="@dimen/default_margin_16">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/default_margin_16"
                android:layout_marginTop="@dimen/default_margin_16"
                android:text="@string/product_description"
                android:textAppearance="@style/TextProductDetailTitle"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_margin_16"
                android:layout_marginTop="@dimen/default_margin_16"
                android:textAppearance="@style/TextProductDetailTitle"
                tools:text="Product Name" />

            <TextView
                android:id="@+id/tvProductDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_margin_16"
                android:layout_marginTop="@dimen/default_margin_8"
                android:layout_marginBottom="@dimen/default_margin_16"
                android:textAppearance="@style/TextProductDetailDesc"
                tools:text="Any Long Text Desc Any Long Text Desc Any Long Text Desc Any Long Text Desc Any Long Text Desc" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacer_height"
                android:background="@color/spacer" />

            <TextView
                android:id="@+id/tvClose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/default_margin_16"
                android:text="@string/close_button"
                android:textColor="@color/black"
                android:textSize="@dimen/default_text_size_product_detail_dialog" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>