<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDepartment"
        android:layout_width="@dimen/card_department_width"
        android:layout_height="@dimen/card_department_height"
        android:layout_margin="@dimen/default_margin_4"
        app:cardCornerRadius="@dimen/default_margin_8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivDepartment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ivDepartment"
                android:layout_alignEnd="@id/ivDepartment"
                android:layout_marginTop="@dimen/default_margin_4"
                android:layout_marginEnd="@dimen/default_margin_8"
                android:textAppearance="@style/TextDepartmentName"
                tools:text="Department" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>