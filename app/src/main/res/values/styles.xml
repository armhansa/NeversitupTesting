<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dialog Style -->
    <style name="FullScreenLoadingStyle" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Text Appearance-->
    <style name="TextTitle">
        <item name="android:textSize">@dimen/default_text_size_page_title</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDepartmentName">
        <item name="android:textSize">@dimen/default_text_size_department_desc</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextProductTitle" parent="TextProductDesc">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextProductDesc">
        <item name="android:textSize">@dimen/default_text_size_product_desc</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>